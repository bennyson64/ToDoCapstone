{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "module": "NodeNext",
    "moduleResolution": "bundler",

    "baseUrl": ".",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/routes/work-items.ts"],
  "exclude": ["node_modules", "dist"]
}
